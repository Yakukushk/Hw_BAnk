using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp2
{
   abstract class Student
    {
        string name, state;
        int age;
        public Student(string name)
        {
            this.name = name;
            Console.WriteLine("");
        }
        public Student(string name, int age) : this(name)
        {
            this.age = age;
            Console.WriteLine("");
        }

        public abstract void Study();
        public virtual void Read() { state = state = "Read"; }
        public virtual void Write() { state = state = "Write"; }
        public virtual void Relax() { state = state = "Relax"; }
        

    }
     class GoodStudent : Student {

        public GoodStudent(string name, int age, string status) : base(name, age) {
            
            Console.WriteLine(name);
            Console.Write(age);
            Console.WriteLine(status);
        }
        public override void Study()
        {
            Read();
            Write();
            Relax();
        }


    }
    class BadStudent : Student{
        public BadStudent(string name, int age, string status) : base(name, age)
        {
            Console.WriteLine(name);
            Console.Write(age);
            Console.WriteLine(status);

            
        }
        public override void Study()
        {
            Read();
            Write();
            Relax();
        }
    }
    public class Debug  {
        static void Main(string[] args)
        {
            GoodStudent student = new GoodStudent("Dima", 13, " Exellent Student");
            BadStudent student1 = new BadStudent("Baklan", 13, " Worse Student");
            BadStudent student2 = new BadStudent("Max", 13, " Bad Student");



        }

    }
    
}
